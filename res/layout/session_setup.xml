<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.reubenjohn.studytimer"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_column="0"
                app:layout_gravity="left"
                app:layout_row="0"
                android:text="@string/session_create_target_title"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_column="0"
                app:layout_gravity="left"
                app:layout_row="1"
                android:gravity="center"
                android:text="@string/session_create_target_hint" />
        </LinearLayout>

        <TimePicker
            android:id="@+id/tp_target_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:layout_column="0"
                    app:layout_gravity="left"
                    app:layout_row="0"
                    android:text="@string/session_create_target_lap_title"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:layout_column="0"
                    app:layout_gravity="left"
                    app:layout_row="1"
                    android:gravity="center"
                    android:text="@string/session_create_target_lap_hint" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_column="0"
                app:layout_gravity="left"
                app:layout_row="0"
                android:text="@string/session_create_target_lap_title"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_column="0"
                app:layout_gravity="left"
                app:layout_row="1"
                android:gravity="center"
                android:text="@string/session_create_target_lap_hint" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <com.reubenjohn.studytimer.util.kankan.widget.WheelView
                android:id="@+id/wv_total_lap_picker_digit1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_gravity="center"
                tools:ignore="NestedWeights" />

            <com.reubenjohn.studytimer.util.kankan.widget.WheelView
                android:id="@+id/wv_total_lap_picker_digit2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_gravity="center" />

            <com.reubenjohn.studytimer.util.kankan.widget.WheelView
                android:id="@+id/wv_total_lap_picker_digit2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>