<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullscreen_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.reubenjohn.studytimer.Home" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <fragment
            android:id="@+id/filler_background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            class="com.reubenjohn.studytimer.FillerFragment"
            tools:layout="@layout/filler" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            tools:ignore="UselessParent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="20"
                android:gravity="center"
                android:orientation="vertical" >

                <fragment
                    android:id="@+id/home_timer_elements"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="11"
                    class="com.reubenjohn.studytimer.TimerElementsFragment"
                    tools:ignore="NestedWeights"
                    tools:layout="@layout/timer_elements_fragment" />

                <FrameLayout
                    android:id="@+id/home_laps_container"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="12" >

                    <fragment
                        android:id="@+id/home_empty_laps"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        class="com.reubenjohn.studytimer.EmptyLapFragment"
                        tools:layout="@layout/empty_lap_fragment" />
                    <fragment
                        android:id="@+id/home_laps"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        class="com.reubenjohn.studytimer.LapsFragment"
                        tools:layout="@layout/laps_fragment" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:fitsSystemWindows="true" >

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent" >

            <ToggleButton
                android:id="@+id/b_toggle"
                style="@style/ToggleButton"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/b_lap"
                style="@style/LapButton"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>