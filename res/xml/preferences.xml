<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:key="checkbox_key"
        android:summary="check something"
        android:title="Checkbox"
        android:defaultValue="false"
        android:dependency="key_pref_data" >
    </CheckBoxPreference>

    <PreferenceCategory
        android:key="key_pref_data"
        android:title="@string/pref_data_title" >
        <com.reubenjohn.studytimer.preferences.YesNoDialogPreference
            android:dialogMessage="@string/pref_data_reset_stats_summary"
            android:key="key_pref_data_reset_stats"
            android:negativeButtonText="No"
            android:positiveButtonText="Yes"
            android:title="@string/pref_data_reset_stats" />
    </PreferenceCategory>

</PreferenceScreen>